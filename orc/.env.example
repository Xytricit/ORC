# Example environment variables for ORC
# Copy to .env and edit as needed

# Database configuration
DB_PATH=.orc/index.db

# Cache configuration
CACHE_DIR=.orc/cache/

# Analysis thresholds
MIN_COMPLEXITY_THRESHOLD=10
DEAD_CODE_CONFIDENCE=0.85

# Web server
HOST=127.0.0.1
PORT=5000

# Logging
LOG_LEVEL=INFO

# AI API Configuration (Enhancement Only)
# Algorithms do primary analysis, AI adds insights
GROQ_API_KEY="mock_groq_api_key_for_nlp_enhancement"
DEEPSEEK_API_KEY="mock_deepseek_api_key_for_code_insights"

# AI Role Settings
AI_ENABLED=true
AI_ROLE="enhancement"  # Options: "enhancement", "primary", "disabled"
PRIMARY_ANALYSIS="algorithmic"  # Always use algorithms for core analysis
PRIMARY_AI_SERVICE="deepseek"  # For code insights
FALLBACK_AI_SERVICE="groq"      # For NLP backup

# AI Behavior
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4096
AI_TIMEOUT=30

# AI Usage Limits
AI_MAX_QUERIES_PER_HOUR=100
AI_CACHE_ENABLED=true
AI_FALLBACK_TO_ALGORITHMS=true

# AI Feature Flags
AI_NATURAL_LANGUAGE_QUERY=true
AI_CODE_INSIGHTS=true
AI_RECOMMENDATIONS=true
AI_IMPACT_EXPLANATIONS=true
AI_PATTERN_RECOGNITION=true